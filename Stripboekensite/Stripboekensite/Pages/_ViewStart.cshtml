@using Stripboekensite
@{

    if (User.IsInRole(Gebruiker.GebruikersRollen.Gebruiker))
    {
        Layout = "Shared/_LayoutUser";
    }
    else if (User.IsInRole(Gebruiker.GebruikersRollen.Moderator))
    {
        Layout = "Shared/_LayoutModerator";
        User.Claims.ToList();
    }
    else
    {
        Layout = "Shared/_LayoutAnon";
    }
}
