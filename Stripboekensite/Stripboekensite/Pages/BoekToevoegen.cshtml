@page
@model Stripboekensite.Pages.BoekenkastModel
@{
}

<div class="container">
    <div class="row">
        <div class="col-6">
            <h1 class="h1">Boek toevoegen</h1>
            <form action="#">
                <div class="form-group">
                    <label>Wat voegt u toe?</label>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="type-book" id="type-book" value="boek">
                        <label class="form-check-label" for="type-book">
                            Boek
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="type-book" id="type-collection" value="Verzameling">
                        <label class="form-check-label" for="type-collection">
                            Verzameling
                        </label>
                    </div>
                </div>
                <div class="form-group mt-4">
                    <label for="data">Vul hieronder alle gegevens van wat u wilt toevoegen:</label>
                    <textarea class="form-control" id="data" rows="8"></textarea>
                </div>
                <div class="form-group mt-4">
                    <label>Voor wie is dit zichbtaar?</label>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="privacy-public" id="privacy-public" value="privacy-public">
                        <label class="form-check-label" for="privacy-public">
                            Voor iedereen
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="privacy-users" id="privacy-users" value="privacy-users">
                        <label class="form-check-label" for="privacy-users">
                            Alleen voor ingelogde gebruikers
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="privacy-private" id="privacy-private" value="privacy-private">
                        <label class="form-check-label" for="privacy-private">
                            Alleen voor mij
                        </label>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary mt-4">Toevoegen</button>
            </form>
        </div>
    </div>
</div>