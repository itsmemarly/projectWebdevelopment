@page
@model Stripboekensite.Pages.BoekToevoegenModel
@{
}

<div class="col-12">
    <form asp-page-handler="AddStripboek" method="post">
        <h5>Voeg een nieuw boek toe</h5>
        <!--Titel van het boek-->
        <div class="mb-3">
    <label for="BookTitle" class="form-label">Naam van het boek</label>
    <input type="text" name="titel" class="form-control" id="BookTitle" />
  </div>

        <!-- Browse door computer en upload gekozen afbeelding -->
  <div class="input-group mb-3">
  <div class="custom-file">
       <label for="BookCover" class="form-label">Upload een foto van de cover</label>
    <input type="file" class="custom-file-input form-control" id="BookCover">
  </div>
</div>

        <!-- ISBN nummer-->
  <div class="mb-3">
    <label for="ISBN" class="form-label">ISBN-nummer</label>
    <input type="text" name="isbn" class="form-control" id="ISBN" />
  </div>

  <!--Eerste druk (Jaar)-->
   <div class="mb-3">
    <label for="FirstBook" class="form-label">Jaar van eerste druk</label>
    <input type="number" name="jaar1druk" class="form-control" id="FirstBook" />
  </div>

  <!--Uitgever (Naam)-->
   <div class="mb-3">
    <label for="Creator" class="form-label">Naam van uitgever</label>
     <input class="form-control" list="datalistCreator" id="Creator" placeholder="Kies de gewenste uitgever">
                    <datalist id="datalistCreator">
                        
                        @foreach (var genre in @Model.Genres)
                        {
                            <option value=@genre.genre_id>@genre.Soort</option>
                        }
        
                    </datalist>
  </div>

  <!--Expliciet boek (Ja/Nee)-->
   <div class="mb-3">
    <label for="ExplicitBook" class="form-label">Is dit boek expliciet?(18+)</label>

    <div class="btn-group form-control col-3" role="group" id="ExplicitBook">
  <input type="radio" class="btn-check" name="expleciet" value="1" id="Explicit" autocomplete="off" checked>
  <label class="btn btn-outline-dark" for="Explicit">Ja</label>

  <input type="radio" class="btn-check " name="expleciet" value="0" id="NotExplicit" autocomplete="off">
  <label class="btn btn-outline-dark" for="NotExplicit">Nee</label>

</div>
  </div>

  <!--Aantal bladzijden-->
   <div class="mb-3">
    <label for="PageNumber" class="form-label">Aantal bladzijden</label>
    <input type="number" name="paginas" class="form-control" id="PageNumber" />
  </div>

  <!--Reeks naam-->
   <div class="mb-3">
    <label for="BookSeries" class="form-label">Naam van Reeks</label>
     <input class="form-control" list="datalistSeries" id="BookSeries" placeholder="Kies de gewenste reeks">
                <datalist id="datalistSeries">
                    
                    @foreach (var genre in @Model.Genres)
                    {
                        <option value=@genre.genre_id>@genre.Soort</option>
                    }
    
                </datalist>
  </div>

  <!--Reeks nummer-->
   <div class="mb-3">
    <label for="SeriesNumber" class="form-label">Nummer van reeks</label>
    <input type="number" name="reeksnum" class="form-control" id="SeriesNumber" />
  </div>

  <!--Categorie van boek (Dropdown met categorie)-->
        <div class="mb-3">
            <label for="BookCategory" class="form-label">Zoek de juiste categorie </label>
            <input class="form-control" list="datalistCategory" id="BookCategory" multiple placeholder="Kies de gewenste categorie">
                       <datalist id="datalistCategory" multiple="multiple">
                           
                          @foreach (var genre in @Model.Genres)
                           {
                               <option value=@genre.genre_id>@genre.Soort</option>
                           }
           
                       </datalist>
        </div>

        <!--- <button type="submit" class="btn btn-dark">Opslaan</button>-->
  <button type="submit" class="btn btn-dark">Opslaan & Toevoegen aan verzameling</button>
</form>
</div>

