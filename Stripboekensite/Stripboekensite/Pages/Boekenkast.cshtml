                        <li class="nav-item">
                            <a href="#guest" class="nav-link" data-bs-toggle="tab">Ga verder als gast</a>
                        </li>
                    </ul>
                    <div class="tab-content">
                       
                        <!--Login tab -->
                        <div class="tab-pane fade show active" id="signin">
                               <br />
                                   <div>
                                        <form class="text-center col-12">
                                                <div class="alert alert-info" role="alert">
                                                 Let op: Gebruikersnaam is uw email!
                                                </div>
    						                <input class="form-control center-block" type="email" name="" placeholder="Email">
    						                <br>
    						                <input class="form-control" type="password" name="" placeholder="Wachtwoord">
    						                <br>
    						                <button class="btn btn-primary btn-sm border-0 col-6" type="submit" name="submit">Log In</button>
    					                </form>
                                    </div>
                                <br/>
                        </div>
    
