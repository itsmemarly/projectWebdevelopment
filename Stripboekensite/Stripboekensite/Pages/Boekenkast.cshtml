@page
@model Stripboekensite.Pages.BoekenkastModel
@{
}

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers




<div class="row">
  <div class="form-outline col-8">    
               
    <form asp-page-handler="Search" method="post">
      <input name="search" type="search"  id="form1" class="form-control col-8" placeholder="Typ hier" aria-label="Search" />
      <button type="submit">search</button>
      <select name="searchtype">
         <option value="1">titel</option>
         <option value="2">creator</option>
         <option value="3">reeks</option>
         <option value="4">uitgever</option>
         </select>
    </form>
  </div>
      <br/>
              <h1 class="clearfix">@Model.message</h1>
           </div>
      <br/>

<div class="col-12">
  <!-- Accordion gebruiken voor verzameling tab-->
  <div class="accordion" id="CollectionAccordion">
    
    <!-- dit zijn alle boeken  -->
    <div class="accordion-item">
      <h2 class="accordion-header" id="headingTwo">
        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#CollectionTwo" aria-expanded="true" aria-controls="CollectionTwo">
          alle boeken
        </button>
      </h2>
      <div id="CollectionTwo" class="accordion-collapse collapse" aria-labelledby="headingTwo" data-bs-parent="#CollectionAccordion">
        <div class="accordion-body">

          <div class="row mt-4 pb-4 pt-2 text-center">
            @foreach (var stripboek in @Model.gebruikerlijstshow)
            {

                  <div class="card col-4 mt-2" style="width: 18rem; margin:3rem;">
                    <div class="card-body">
                      <h5 class="card-title">@stripboek.Stripboek.titel</h5>
                      <p class="card-text">test</p>
                      <form asp-page-handler="Delete" method="post">
                        <button name="stripboekid" value="@stripboek.Gebruiker_stripboek_ID" class="btn btn-primary">Delete</button>
                      </form>
                    </div>
                  </div>
            }
          </div>

        </div>
      </div>

    </div>

    <!-- dit is per genre -->
    <div class="accordion-item">
      <h2 class="accordion-header" id="headingOne">
        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#CollectionOne" aria-expanded="true" aria-controls="CollectionOne">
          Per categorie
        </button>
      </h2>
      <div id="CollectionOne" class="accordion-collapse collapse" aria-labelledby="headingOne" data-bs-parent="#CollectionAccordion">
        <div class="accordion-body">

          <div class="row mt-4 pb-4 pt-2 text-center">
            @foreach (var genre in @Model.Genres)
            {
              <div>@genre.soort</div>
              @foreach (var stripboek in @Model.stripboekgenreshowed)
              {
                @if (stripboek.genre.genre_id == genre.genre_id)
                {
                  <div class="card col-4 mt-2" style="width: 18rem; margin:3rem;">
                    <div class="card-body">
                      <h5 class="card-title">@stripboek.Stripboek.titel</h5>
                      <p class="card-text">test</p>
                    </div>
                  </div>
                }
              }
            }
          </div>

        </div>
      </div>

    </div>

  </div>
</div>

<br/>
